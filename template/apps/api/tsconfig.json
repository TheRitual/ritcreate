{
  "extends": "@repo/typescript-config/nest.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/protos/generated/*": [
        "../../packages/protos/generated/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
    "../../packages/protos/generated"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
